<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mainLayout"
    tools:context=".wifi_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/signalTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signal Strength"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/signalStrengthPercent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="72 %"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/ssidTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SSID"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/wifiSSID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sample WIFI"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/connectionTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection Status"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/connectionStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="16sp"
                android:textColor="@color/green"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/ipTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IP Address"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/wifiIpAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="192.168.1.1"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/sourceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Source"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/wifiSourceTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Data"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/upspeedTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up Speed"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/wifiUpSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/downspeedTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down Speed"
                android:textSize="16sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/wifiDownSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/colorPrimary"
                android:textAlignment="textEnd"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="30dp"
        android:paddingBottom="30dp">

        <Button
            android:id="@+id/sourceOnOffSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_state_1"
            android:text="Turn WiFi Off"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="18sp"
            android:stateListAnimator="@null"/>

        <Button
            android:id="@+id/recheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_state"
            android:text="Recheck Connectivity"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_marginTop="20dp"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</LinearLayout>